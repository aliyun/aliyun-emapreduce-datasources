<configuration>

    <property>
        <name>fs.oss.impl</name>
        <value>com.aliyun.fs.oss.nat.NativeOssFileSystem</value>
    </property>

    <property>
        <name>mapreduce.job.run-local</name>
        <value>true</value>
    </property>

    <property>
        <name>fs.oss.buffer.dirs</name>
        <value>/tmp</value>
    </property>

    <property>
        <name>hadoop.tmp.dir</name>
        <value>target/build/test</value>
        <description>A base for other temporary directories.</description>
        <final>true</final>
    </property>

</configuration>
